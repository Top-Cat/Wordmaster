<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

	<LinearLayout
	    android:id="@+id/screen_login"
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:background="#132286"
	    android:orientation="vertical" >
		
		<com.google.android.gms.common.SignInButton
			android:id="@+id/button_sign_in"
			style="@style/SignInButton" />

	</LinearLayout>
		
	<LinearLayout
	    android:id="@+id/screen_game"
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:background="#132286"
	    android:orientation="vertical"
	    android:visibility="gone"
	    tools:context=".BaseGame" >
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/header" >
	
			<uk.co.thomasc.wordmaster.util.RussoText
				android:id="@+id/text1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.1"
				android:drawableLeft="@drawable/ic_launcher"
				android:drawablePadding="5dp"
				android:text="@string/default_score"
				android:textColor="@color/header_text"
				android:textSize="40sp" />
	
			<ImageView
				android:id="@+id/indicator"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_weight="0.2"
				android:contentDescription="@string/game_screen"
				android:paddingBottom="5dp"
				android:src="@drawable/page_note_left" />
	
			<uk.co.thomasc.wordmaster.util.RussoText
				android:id="@+id/TextView01"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_weight="0.1"
				android:drawablePadding="5dp"
				android:drawableRight="@drawable/ic_launcher"
				android:text="@string/default_score"
				android:textColor="@color/header_text"
				android:textSize="40sp" />
	
		</LinearLayout>
	
		<android.support.v4.view.ViewPager
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/pager"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:background="@color/mainbg" />
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@color/footer_bar" >
	
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingLeft="10dp" >
	
				<uk.co.thomasc.wordmaster.util.RussoText
					android:id="@+id/turnTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/turn"
					android:textColor="@color/footer_text" />
	
				<uk.co.thomasc.wordmaster.util.RussoText
					android:id="@+id/turn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginTop="-10dp"
					android:text="@string/default_turn"
					android:textColor="@color/footer_text"
					android:textSize="36sp" />
	
			</LinearLayout>
			
			<View
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_weight="1" />
	
			<ImageView
				android:id="@+id/imageView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginRight="4dp"
				android:contentDescription="@string/guess"
				android:src="@drawable/guess" />
	
		</LinearLayout>
		
		<EditText
			android:id="@+id/editText1"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:alpha="0"
			android:ems="10"
			android:imeOptions="actionNone"
			android:inputType="textCapCharacters|textNoSuggestions"
			android:maxLength="4"
			android:visibility="visible" >
	
			<requestFocus />
		</EditText>
	
	</LinearLayout>
</FrameLayout>