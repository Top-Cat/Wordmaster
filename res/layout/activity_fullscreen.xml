<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="#132286"
	tools:context=".BaseGame"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/header" >

		<uk.co.thomasc.wordmaster.util.RussoText
			android:id="@+id/text1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.1"
			android:drawableLeft="@drawable/ic_launcher"
			android:drawablePadding="5dp"
			android:text="5"
			android:textColor="@color/header_text"
			android:textSize="40sp" />

		<ImageView
		    android:id="@+id/indicator"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="bottom"
		    android:layout_weight="0.2"
		    android:contentDescription="@string/game_screen"
		    android:paddingBottom="5dp"
		    android:src="@drawable/page_note_left" />

		<uk.co.thomasc.wordmaster.util.RussoText
			android:id="@+id/TextView01"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:layout_weight="0.1"
			android:drawablePadding="5dp"
			android:drawableRight="@drawable/ic_launcher"
			android:text="3"
			android:textColor="@color/header_text"
			android:textSize="40sp" />

	</LinearLayout>

	<android.support.v4.view.ViewPager
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/pager"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@color/mainbg" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@color/footer_bar" >

	</LinearLayout>
	
	<EditText
	    android:id="@+id/editText1"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:alpha="0"
	    android:ems="10"
	    android:imeOptions="actionNone"
	    android:inputType="textCapCharacters|textNoSuggestions"
	    android:maxLength="4"
	    android:visibility="visible" >

		<requestFocus />
	</EditText>

</LinearLayout>